{
  "manifest_version": 2,
  "name": "MRGA - make reddit great again",
  "short_name": "take r/the_donald to-go",
  "description": "no matter which subreddit you troll, The Donald will be with you.",
  "browser_action": {
     "default_icon": "mrga_128.jpg"
   },
  "version": "0.1",
  "icons": { "16": "mrga_16.jpg",
             "48": "mrga_48.jpg",
             "128": "mrga_128.jpg" },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background":{
    "scripts": ["icon.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.reddit.com/*",
        "https://*.reddit.com/*"
        ],
      "js":["brick_layer.js"]
    }
  ]
}
